{
    "openapi": "3.0.0",
    "info": {
        "title": "サンプル",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "$ref": "./schemas/users.json"
            }
        }
    },
    "paths": {
        "/sanctum/csrf-cookie": {
            "get": {
                "$ref": "./paths/auth/csrf-cookie.json"
            }
        },
        "/register": {
            "post": {
                "$ref": "./paths/auth/register.json"
            }
        },
        "/login": {
            "post": {
                "$ref": "./paths/auth/login.json"
            }
        },
        "/user": {
            "get": {
                "$ref": "./paths/auth/user.json"
            }
        },
        "/users": {
            "post": {
                "$ref": "./paths/users/index.json"
            },
            "put": {
                "$ref": "./paths/users/update.json"
            }
        },
        "/users/{id}": {
            "get": {
                "$ref": "./paths/users/show.json"
            },
            "delete": {
                "$ref": "./paths/users/destroy.json"
            }
        },
        "/users/update-email": {
            "put": {
                "$ref": "./paths/users/updateEmail.json"
            }
        },
        "/users/update-password": {
            "put": {
                "$ref": "./paths/users/updatePassword.json"
            }
        }
    }
}
