{
    "tags": [
        "Comment"
    ],
    "description": "コメントを取得する。",
    "parameters": [
        {
            "description": "取得するデータの指定",
            "in": "query",
            "name": "cursor",
            "required": false,
            "schema": {
                "type": "string",
                "example": "eyJjb21tZW50cy5pZCI6MTUsIl9wb2ludHNUb05leHRJdGVtcyI6dHJ1ZX0"
            }
        },
        {
            "description": "投稿のID",
            "in": "query",
            "name": "post_id",
            "required": true,
            "schema": {
                "type": "integer",
                "example": 1
            }
        },
        {
            "description": "並び順のキー",
            "in": "query",
            "name": "order_by",
            "required": false,
            "schema": {
                "type": "string",
                "example": "created_by"
            }
        },
        {
            "description": "昇順・降順の指定",
            "in": "query",
            "name": "order_by",
            "required": false,
            "schema": {
                "type": "string",
                "example": "asc"
            }
        }
    ],
    "responses": {
        "200": {
            "description": "成功",
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "../../resources/comments/multiple.json"
                    }
                }
            }
        }
    }
}
