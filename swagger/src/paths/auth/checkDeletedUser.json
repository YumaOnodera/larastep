{
    "tags": [
        "Auth"
    ],
    "description": "メールアドレスとパスワードをもとにユーザーを取得し、対象ユーザーが削除済みかどうかを判定する。",
    "requestBody": {
        "content": {
            "application/json:": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "test@example.com"
                        },
                        "password": {
                            "type": "string",
                            "example": "password"
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "200": {
            "description": "成功",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "is_deleted": {
                                "type": "boolean",
                                "example": true
                            }
                        }
                    }
                }
            }
        },
        "419": {
            "description": "CORS not allowed"
        }
    }
}
