{
    "tags": [
        "Post"
    ],
    "description": "投稿を取得する。",
    "parameters": [
        {
            "description": "ページの指定",
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
                "type": "integer",
                "example": 1
            }
        }
    ],
    "requestBody": {
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "per_page": {
                            "type": "integer",
                            "example": 5,
                            "description": "1ページに表示する件数"
                        },
                        "order_by": {
                            "type": "string",
                            "example": "created_by",
                            "description": "並び順のキー"
                        },
                        "order": {
                            "type": "string",
                            "example": "desc",
                            "description": "昇順・降順の指定"
                        },
                        "user_ids": {
                            "type": "array",
                            "example": [1, 2, 3, 4, 5],
                            "description": "投稿者による絞り込み"
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "200": {
            "description": "成功",
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "../../resources/posts/multiple.json"
                    }
                }
            }
        }
    }
}
