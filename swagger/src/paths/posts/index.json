{
    "tags": [
        "Post"
    ],
    "description": "指定した件数ごとに投稿を取得する。",
    "parameters": [
        {
            "description": "ページの指定",
            "in": "path",
            "name": "page",
            "required": true,
            "schema": {
                "type": "integer",
                "example": 1
            }
        }
    ],
    "requestBody": {
        "description": "per_page: 1ページに表示する件数<br>order_by: 並び順のキー<br>order: 昇順・降順の指定<br>user_ids: 投稿者による絞り込み",
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "per_page": {
                            "type": "integer",
                            "example": 5
                        },
                        "order_by": {
                            "type": "string",
                            "example": "created_by"
                        },
                        "order": {
                            "type": "string",
                            "example": "desc"
                        },
                        "user_ids": {
                            "type": "array",
                            "example": [1, 2, 3, 4, 5]
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "200": {
            "description": "成功",
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "../../resources/posts/multiple/common.json"
                    }
                }
            }
        }
    }
}
