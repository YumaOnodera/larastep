{
    "tags": [
        "Post"
    ],
    "description": "作成日、IDの降順で指定した件数ごとに投稿を取得する。",
    "parameters": [
        {
            "description": "ページの指定",
            "in": "path",
            "name": "page",
            "required": true,
            "schema": {
                "type": "integer",
                "example": 1
            }
        }
    ],
    "requestBody": {
        "description": "per_page: 1ページに表示する件数<br>user_ids: 投稿者による絞り込み",
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "per_page": {
                            "type": "integer",
                            "example": 5
                        },
                        "order_by": {
                            "type": "string",
                            "example": "created_by"
                        },
                        "order": {
                            "type": "string",
                            "example": "desc"
                        },
                        "user_ids": {
                            "type": "array",
                            "example": [1, 2, 3, 4, 5]
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "200": {
            "description": "成功",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "total": {
                                "type": "integer",
                                "example": 50
                            },
                            "per_page": {
                                "type": "integer",
                                "example": 5
                            },
                            "current_page": {
                                "type": "integer",
                                "example": 1
                            },
                            "last_page": {
                                "type": "integer",
                                "example": 10
                            },
                            "first_item": {
                                "type": "integer",
                                "example": 1
                            },
                            "last_item": {
                                "type": "integer",
                                "example": 5
                            },
                            "has_more_pages": {
                                "type": "boolean",
                                "example": true
                            },
                            "data": {
                                "type": "array",
                                "example": [
                                    {
                                        "id": 5,
                                        "text": "テスト",
