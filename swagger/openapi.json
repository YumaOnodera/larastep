        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "description": "指定したユーザーを論理削除する。",
        "parameters": [
          {
            "description": "ユーザーのID",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "処理に成功しました。"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "権限エラー",
