{
  "openapi": "3.0.0",
  "info": {
    "title": "サンプル",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "email_verified_at": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "deleted_at": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/sanctum/csrf-cookie": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "CSRFトークンを生成する。",
        "responses": {
          "204": {
            "description": "No Content",
            "headers": {
              "XSRF-TOKEN": {
                "schema": {
                  "type": "string",
                  "example": "XSRF-TOKEN=abc123;"
                },
                "description": "CSRFトークン"
              }
            }
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "ユーザーを登録し、ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Test User"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "no content"
          },
          "419": {
            "description": "CORS not allowed"
          },
          "422": {
            "description": "validation error"
          }
        }
      }
    },
    "/deleted-user/check": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "メールアドレスとパスワードをもとにユーザーを取得し、対象ユーザーが削除済みかどうかを判定する。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "isDeleted": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "no content"
          },
          "419": {
            "description": "CORS not allowed"
          },
          "422": {
            "description": "authentication failed"
          }
        }
      }
    },
    "/forgot-password": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "指定されたメールアドレスに対して、パスワードリセットメールを送信する。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "パスワードリセットメールを送信しました。"
                    }
                  }
                }
              }
            }
          },
          "419": {
            "description": "CORS not allowed"
          },
          "422": {
            "description": "validation error"
          }
        }
      }
    },
    "/reset-password": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "パスワードをリセットする。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "example": "password"
                  },
                  "token": {
                    "type": "string",
                    "example": "781f2cbe7c692028c0d49c4ef208387362a984442263a91850f8a0e55c6e2d47"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "パスワードをリセットしました。"
                    }
                  }
                }
              }
            }
          },
          "419": {
            "description": "CORS not allowed"
          },
          "422": {
            "description": "validation error"
          }
        }
      }
    },
    "/verify-email/{id}/{hash}": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "メールアドレスを検証済みとする。",
        "parameters": [
          {
            "description": "ユーザーのID",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "description": "メールアドレス認証トークン",
            "in": "path",
            "name": "hash",
            "required": true,
            "schema": {
              "type": "string",
              "example": "567159d622ffbb50b11b0efd307be358624a26ee"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "redirect to home"
          }
        }
      }
    },
    "/email/verification-notification": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "メールアドレス確認通知を送信する。",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "verification-link-sent"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "ログアウトを行う。",
        "responses": {
          "204": {
            "description": "no content"
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "ログインユーザーを取得する。",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "name": {
                      "type": "string",
                      "example": "山田一郎"
                    },
                    "email": {
                      "type": "string",
                      "example": "test@example.co.jp"
                    },
                    "email_verified_at": {
                      "type": "string",
                      "example": "2022-01-02 00:00:00"
                    },
                    "created_at": {
                      "type": "string",
                      "example": "2022-01-01 00:00:00"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2022-01-02 00:00:00"
                    },
                    "deleted_at": {
                      "type": "string",
                      "example": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "指定した件数ごとにユーザーを取得する。",
        "parameters": [
          {
            "description": "ページの指定",
            "in": "path",
            "name": "page",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "description": "per_page: 1ページに表示する件数",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "per_page": {
                    "type": "integer",
                    "example": 5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": {
                      "type": "integer",
                      "example": 50
                    },
                    "per_page": {
                      "type": "integer",
                      "example": 5
                    },
                    "current_page": {
                      "type": "integer",
                      "example": 1
                    },
                    "last_page": {
                      "type": "integer",
                      "example": 10
                    },
                    "first_item": {
                      "type": "integer",
                      "example": 1
                    },
                    "last_item": {
                      "type": "integer",
                      "example": 5
                    },
                    "has_more_pages": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "example": [
                        {
                          "id": 1,
                          "name": "山田一郎",
                          "email": "test@example.co.jp",
                          "email_verified_at": "2022-01-02 00:00:00",
                          "created_at": "2022-01-01 00:00:00",
                          "updated_at": "2022-01-02 00:00:00",
                          "deleted_at": null
                        },
                        {
                          "id": 2,
                          "name": "田中二郎",
                          "email": "test2@example.co.jp",
                          "email_verified_at": "2022-01-02 00:00:00",
                          "created_at": "2022-01-01 00:00:00",
                          "updated_at": "2022-01-02 00:00:00",
                          "deleted_at": null
                        },
                        {
                          "id": 3,
                          "name": "中田三郎",
                          "email": "test3@example.co.jp",
                          "email_verified_at": "2022-01-02 00:00:00",
                          "created_at": "2022-01-01 00:00:00",
                          "updated_at": "2022-01-02 00:00:00",
                          "deleted_at": null
                        },
                        {
                          "id": 4,
                          "name": "田山四郎",
                          "email": "test4@example.co.jp",
                          "email_verified_at": "2022-01-02 00:00:00",
                          "created_at": "2022-01-01 00:00:00",
                          "updated_at": "2022-01-02 00:00:00",
                          "deleted_at": null
                        },
                        {
                          "id": 5,
                          "name": "中村五郎",
                          "email": "test5@example.co.jp",
                          "email_verified_at": "2022-01-02 00:00:00",
                          "created_at": "2022-01-01 00:00:00",
                          "updated_at": "2022-01-02 00:00:00",
                          "deleted_at": null
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "権限エラー",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "許可されていない操作です。"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "description": "指定したユーザーを更新する。",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "山田一郎"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "name": {
                      "type": "string",
                      "example": "山田一郎"
                    },
                    "email": {
                      "type": "string",
                      "example": "test@example.co.jp"
                    },
                    "email_verified_at": {
                      "type": "string",
                      "example": "2022-01-02 00:00:00"
                    },
                    "created_at": {
                      "type": "string",
                      "example": "2022-01-01 00:00:00"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2022-01-02 00:00:00"
                    },
                    "deleted_at": {
                      "type": "string",
                      "example": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "指定したユーザーを取得する。",
        "parameters": [
          {
            "description": "ユーザーのID",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "name": {
