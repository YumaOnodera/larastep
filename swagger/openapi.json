{
  "openapi": "3.0.0",
  "info": {
    "title": "サンプル",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/sanctum/csrf-cookie": {
      "get": {
        "description": "CSRFトークンを生成する。",
        "responses": {
          "204": {
            "description": "No Content",
            "headers": {
              "XSRF-TOKEN": {
                "schema": {
                  "type": "string",
                  "example": "XSRF-TOKEN=abc123;"
                },
                "description": "CSRFトークン"
              }
            }
          }
        }
      }
    },
    "/register": {
      "post": {
        "description": "ユーザーを登録し、ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Test User"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "headers": {},
            "description": "no content"
          },
          "419": {
            "headers": {},
            "description": "CORS not allowed"
          },
          "422": {
            "headers": {},
            "description": "validation error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "description": "ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "headers": {},
            "description": "no content"
          },
          "419": {
            "headers": {},
            "description": "CORS not allowed"
          },
          "422": {
            "headers": {},
            "description": "authentication failed"
          }
        }
      }
    },
    "/user": {
      "get": {
        "description": "ログインユーザーの取得",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "example": "山田太郎"
                          },
                          "email": {
                            "type": "string",
                            "example": "test@example.co.jp"
                          },
                          "email_verified_at": {
                            "type": "string",
                            "example": "2022-01-02 00:00:00"
                          },
                          "created_at": {
                            "type": "string",
                            "example": "2022-01-01 00:00:00"
                          },
                          "updated_at": {
                            "type": "string",
                            "example": "2022-01-02 00:00:00"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}