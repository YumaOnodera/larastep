{
  "openapi": "3.0.0",
  "info": {
    "title": "サンプル",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/sanctum/csrf-cookie": {
      "get": {
        "description": "CSRFトークンを生成する。",
        "responses": {
          "204": {
            "description": "No Content",
            "headers": {
              "XSRF-TOKEN": {
                "schema": {
                  "type": "string",
                  "example": "XSRF-TOKEN=abc123;"
                },
                "description": "CSRFトークン"
              }
            }
          }
        }
      }
    },
    "/register": {
      "post": {
        "description": "ユーザーを登録し、ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Test User"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "headers": {},
            "description": "no content"
          },
          "419": {
            "headers": {},
            "description": "CORS not allowed"
          },
          "422": {
            "headers": {},
            "description": "validation error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "description": "ログインを行う。",
        "requestBody": {
          "content": {
            "application/json:": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "headers": {},
            "description": "no content"
          },
          "419": {
            "headers": {},
            "description": "CORS not allowed"
          },
          "422": {
            "headers": {},
            "description": "authentication failed"
          }
        }
      }
    }
  }
}