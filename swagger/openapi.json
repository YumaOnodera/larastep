    "/users/update-email": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "指定したユーザーのメールアドレスを更新する。",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.co.jp"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "no content"
          }
        }
      }
    },
    "/users/update-password": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "指定したユーザーのパスワードを更新する。",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "example": "password"
                  },
                  "password_confirmation": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "no content"
          }
        }
      }
    }
  }
